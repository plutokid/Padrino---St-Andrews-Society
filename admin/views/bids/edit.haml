.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:bids, :index)
      %li=link_to pat(:new), url(:bids, :new)
      %li.active=link_to pat(:edit), url(:bids, :edit, :id => @bid.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:bid)
    .inner
      -form_for :bid, url(:bids, :update, :id => @bid.id), :method => :put, :class => :form do |f|
        =partial "bids/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")